<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Tasty Recipes</title>
    <link href="~/Content/animate.min.css" rel="stylesheet" />
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <link href="~/Content/flaticon.css" rel="stylesheet" />
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/gijgo.css" rel="stylesheet" />
    <link href="~/Content/magnific-popup.css" rel="stylesheet" />
    <link href="~/Content/nice-select.css" rel="stylesheet" />
    <link href="~/Content/owl.carousel.min.css" rel="stylesheet" />
    <link href="~/Content/slick.css" rel="stylesheet" />
    <link href="~/Content/slicknav.css" rel="stylesheet" />
    <link href="~/Content/style.css" rel="stylesheet" />
    <link href="~/Content/theme-default.css" rel="stylesheet" />
    <link href="~/Content/themify-icons.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css" integrity="sha512-DTOQO9RWCH3ppGqcWaEA1BIZOC6xxalwEsw9c2QQeAIftl+Vegovlnee1c9QX4TctnWMn13TZye+giMm8e2LwA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
    
    <script src="~/Scripts/vendor/jquery-1.12.4.min.js"></script>
    <script src="~/Scripts/vendor/modernizr-3.5.0.min.js"></script>
</head>
<body>
    <header>
        <div class="header-area">
            <div id="sticky-header" class="main-header-area">
                <div class="container">
                    <div class="row align-items-center">
                        <div class="col-xl-3 col-lg-2">
                            <div class="logo">
                                <a href="@Url.Action("Index", "Home")">
                                    <img src="~/img/logo.png" alt="">
                                </a>
                            </div>
                        </div>
                        <div class="col-xl-6 col-lg-7">
                            <div class="main-menu d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li>@Html.ActionLink("Home", "Index", "Home")</li>
                                        <li>@Html.ActionLink("About", "About", "Home")</li>
                                        <li>@Html.ActionLink("Recipes", "Recipes", "Home")</li>
                                        <li>@Html.ActionLink("Contact", "Contact", "Home")</li>
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            if (User.IsInRole("Admin"))
                                            {
                                                <li>@Html.ActionLink("Admin Dashboard", "Index", "Admin", null, new { @class = "admin-link" })</li>
                                            }
                                            <li>@Html.ActionLink("Logout", "Logout", "Login")</li>
                                        }
                                        else
                                        {
                                            <li>@Html.ActionLink("Login", "Index", "Login")</li>
                                        }
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <div class="body-content">
        @RenderBody()
    </div>

    <footer>
        <div class="container">
            <div class="row">
                <div class="col-12 text-center">
                    <p>&copy; @DateTime.Now.Year - Tasty Recipes. All rights reserved.</p>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/Scripts/vendor/popper.min.js"></script>
    <script src="~/Scripts/vendor/bootstrap.min.js"></script>
    <script src="~/Scripts/vendor/owl.carousel.min.js"></script>
    <script src="~/Scripts/vendor/isotope.pkgd.min.js"></script>
    <script src="~/Scripts/vendor/ajax-form.js"></script>
    <script src="~/Scripts/vendor/jquery.form.js"></script>
    <script src="~/Scripts/vendor/jquery.validate.min.js"></script>
    <script src="~/Scripts/vendor/mail-script.js"></script>
    <script src="~/Scripts/vendor/jquery.ajaxchimp.min.js"></script>
    <script src="~/Scripts/vendor/plugins.js"></script>
    <script src="~/Scripts/vendor/main.js"></script>
    
    @RenderSection("scripts", required: false)

    <style>
        /* Add this to your existing styles */
        .admin-link {
            color: #FF008C !important;
            font-weight: bold;
        }

        .admin-link:hover {
            color: #001D38 !important;
        }
    </style>
</body>
</html>
