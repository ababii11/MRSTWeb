@model eUseControl.Domain.Entities.User.UserLogin

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* Override header styles for login page */
    .header-area {
        background: transparent !important;
        box-shadow: none !important;
    }

    .header-area #navigation li a {
        color: white !important;
    }

    .login-section {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.7)),
                    url('https://images.unsplash.com/photo-1543353071-873f17a7a088?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80');
        background-size: cover;
        background-position: center;
        background-attachment: fixed;
        padding: 0;
        margin: 0;
        position: relative;
        top: 0;
        z-index: 0;
        padding-top: 100px; /* Add padding to account for navigation */
    }

    .login-box {
        background: rgba(255, 255, 255, 0.97);
        padding: 40px 40px 30px;
        border-radius: 15px;
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.2);
        max-width: 400px;
        width: 100%;
        position: relative;
        backdrop-filter: blur(10px);
        margin: 0 auto; /* Center horizontally */
    }

    .login-title {
        font-family: "Satisfy", cursive;
        font-size: 42px;
        color: #001D38;
        text-align: center;
        margin: -10px auto 30px;
        padding: 0;
        width: 100%;
        display: block;
        position: relative;
        transform: translateX(0); /* Ensure perfect centering */
        line-height: 1.2;
    }

    .container {
        max-width: 1140px;
        margin-right: auto;
        margin-left: auto;
        padding-right: 15px;
        padding-left: 15px;
        width: 100%;
    }

    .row.justify-content-center {
        display: flex;
        justify-content: center;
        margin-right: -15px;
        margin-left: -15px;
    }

    .col-md-6 {
        position: relative;
        width: 100%;
        padding-right: 15px;
        padding-left: 15px;
        display: flex;
        justify-content: center;
    }

    .form-group {
        margin-bottom: 25px;
        position: relative;
    }

    .form-group label {
        color: #001D38;
        font-weight: 500;
        margin-bottom: 10px;
        font-size: 16px;
        display: block;
    }

    .form-control {
        height: 50px;
        background: rgba(255, 255, 255, 0.9);
        border: 2px solid #e8e8e8;
        border-radius: 8px;
        padding: 0 20px;
        font-size: 15px;
        font-weight: 400;
        color: #001D38;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        border-color: #615CFD;
        box-shadow: 0 0 15px rgba(97, 92, 253, 0.1);
    }

    .input-icon {
        position: absolute;
        top: 43px;
        left: 15px;
        color: #615CFD;
        font-size: 18px;
    }

    .input-with-icon {
        padding-left: 45px;
    }

    .btn-login {
        background: #615CFD;
        color: #fff;
        padding: 15px 30px;
        font-size: 16px;
        font-weight: 500;
        border: none;
        border-radius: 8px;
        width: 100%;
        cursor: pointer;
        transition: all 0.3s ease;
        margin-top: 10px;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(97, 92, 253, 0.3);
    }

    .btn-login:hover {
        background: #FF008C;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(255, 0, 140, 0.4);
    }

    .forgot-password {
        text-align: right;
        margin-top: 10px;
    }

    .forgot-password a {
        color: #615CFD;
        text-decoration: none;
        font-size: 14px;
        font-weight: 500;
        transition: color 0.3s ease;
    }

    .forgot-password a:hover {
        color: #FF008C;
        text-decoration: underline;
    }

    .register-link {
        text-align: center;
        margin-top: 25px;
        padding-top: 20px;
        border-top: 1px solid #e8e8e8;
    }

    .register-link p {
        color: #727272;
        font-size: 15px;
        margin: 0;
        display: flex;
        align-items: center;
        justify-content: center;
    }

    .register-link a {
        color: #615CFD;
        text-decoration: none;
        font-weight: 600;
        transition: color 0.3s ease;
    }

    .register-link a:hover {
        color: #FF008C;
        text-decoration: underline;
    }

    .validation-summary-errors {
        color: #dc3545;
        background: rgba(220, 53, 69, 0.1);
        padding: 15px;
        border-radius: 8px;
        margin-bottom: 20px;
    }

    .validation-summary-errors ul {
        list-style: none;
        margin: 0;
        padding: 0;
    }

    .field-validation-error {
        color: #dc3545;
        font-size: 13px;
        margin-top: 5px;
        display: block;
    }

    @@media screen and (min-width: 768px) {
        .col-md-6 {
            flex: 0 0 50%;
            max-width: 50%;
            margin: 0 auto;
        }
    }

    .btn-register-now {
        display: inline-block;
        background: #FF008C;
        color: #fff;
        padding: 10px 25px;
        font-size: 16px;
        font-weight: 500;
        border: none;
        border-radius: 8px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-decoration: none;
        margin-left: 10px;
        box-shadow: 0 4px 15px rgba(255, 0, 140, 0.3);
    }

    .btn-register-now:hover {
        background: #001D38;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 29, 56, 0.4);
        color: #fff;
        text-decoration: none;
    }
</style>

<div class="login-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="login-box">
                    <h2 class="login-title">Welcome Back</h2>
                    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
                    {
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary(true)

                        <div class="form-group">
                            <label for="Credential">Username or Email</label>
                            <i class="fas fa-user input-icon"></i>
                            @Html.TextBoxFor(m => m.Credential, new { @class = "form-control input-with-icon", placeholder = "Enter your username or email" })
                            @Html.ValidationMessageFor(m => m.Credential)
                        </div>

                        <div class="form-group">
                            <label for="Password">Password</label>
                            <i class="fas fa-lock input-icon"></i>
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control input-with-icon", placeholder = "Enter your password" })
                            @Html.ValidationMessageFor(m => m.Password)
                        </div>

                        <div class="forgot-password">
                            <a href="#">Forgot Password?</a>
                        </div>

                        <button type="submit" class="btn btn-login">
                            <i class="fas fa-sign-in-alt mr-2"></i> Login
                        </button>

                        <div class="register-link">
                            <p>Don't have an account? <a href="@Url.Action("Register", "Account")" class="btn btn-register-now">Register Now</a></p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
} 