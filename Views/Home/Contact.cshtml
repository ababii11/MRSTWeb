@{
    ViewBag.Title = "Contact";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="bradcam_area" style="background-image: url('https://images.unsplash.com/photo-1504674900247-0877df9cc836?ixlib=rb-1.2.1&auto=format&fit=crop&w=1920&q=80')">
    <div class="container">
        <div class="row">
            <div class="col-xl-12">
                <div class="bradcam_text text-center">
                    <h3>Contact Us</h3>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="contact-section section_padding">
    <div class="container">
        <div class="row">
            <div class="col-12">
                <h2 class="contact-title">Get in Touch</h2>
            </div>
            <div class="col-lg-8">
                <form class="form-contact contact_form" action="#" method="post" id="contactForm" novalidate="novalidate">
                    <div class="row">
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="name" id="name" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter your name'" placeholder="Enter your name">
                            </div>
                        </div>
                        <div class="col-sm-6">
                            <div class="form-group">
                                <input class="form-control" name="email" id="email" type="email" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter email address'" placeholder="Enter email address">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <input class="form-control" name="subject" id="subject" type="text" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Subject'" placeholder="Enter Subject">
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-group">
                                <textarea class="form-control w-100" name="message" id="message" cols="30" rows="9" onfocus="this.placeholder = ''" onblur="this.placeholder = 'Enter Message'" placeholder="Enter Message"></textarea>
                            </div>
                        </div>
                    </div>
                    <div class="form-group mt-3">
                        <button type="submit" class="button button-contactForm btn_4 boxed-btn">Send Message</button>
                    </div>
                </form>
            </div>
            <div class="col-lg-4">
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-home"></i></span>
                    <div class="media-body">
                        <h3>Recipe Street, Food City</h3>
                        <p>123 Cooking Avenue, FC 12345</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-tablet"></i></span>
                    <div class="media-body">
                        <h3>+1 (555) 123-4567</h3>
                        <p>Mon to Fri 9am to 6pm</p>
                    </div>
                </div>
                <div class="media contact-info">
                    <span class="contact-info__icon"><i class="ti-email"></i></span>
                    <div class="media-body">
                        <h3>hello@tastyrecipes.com</h3>
                        <p>Send us your query anytime!</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .bradcam_area {
        padding: 170px 0;
        background-size: cover;
        background-position: center;
        background-repeat: no-repeat;
        position: relative;
    }

    .bradcam_area::before {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        background: rgba(0, 0, 0, 0.4);
    }

    .bradcam_text {
        position: relative;
        z-index: 1;
    }

    .bradcam_text h3 {
        color: #fff;
        font-size: 50px;
        font-weight: 700;
        margin-bottom: 0;
        font-family: "Satisfy", cursive;
    }

    .contact-section {
        padding: 130px 0;
        background-color: #F5FBFF;
    }

    .contact-title {
        font-family: "Satisfy", cursive;
        font-size: 42px;
        color: #001D38;
        margin-bottom: 50px;
        text-align: center;
    }

    .form-contact .form-control {
        height: 50px;
        border: 1px solid #e8e8e8;
        border-radius: 5px;
        padding: 0 20px;
        font-size: 15px;
        font-weight: 400;
        color: #001D38;
        transition: all 0.3s ease;
    }

    .form-contact textarea.form-control {
        height: 150px;
        padding: 20px;
        resize: none;
    }

    .form-control:focus {
        border-color: #FF008C;
        box-shadow: none;
    }

    .button-contactForm {
        background: #FF008C;
        color: #fff;
        padding: 18px 44px;
        font-size: 16px;
        font-weight: 500;
        border: 0;
        border-radius: 30px;
        cursor: pointer;
        transition: all 0.3s ease;
        text-transform: uppercase;
        letter-spacing: 1px;
        box-shadow: 0 4px 15px rgba(255, 0, 140, 0.2);
        position: relative;
        overflow: hidden;
    }

    .button-contactForm:hover {
        background: #001D38;
        color: #fff;
        transform: translateY(-2px);
        box-shadow: 0 6px 20px rgba(0, 29, 56, 0.2);
    }

    .button-contactForm:active {
        transform: translateY(0);
    }

    .button-contactForm::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 100%;
        height: 100%;
        background: linear-gradient(
            120deg,
            transparent,
            rgba(255, 255, 255, 0.2),
            transparent
        );
        transition: 0.5s;
    }

    .button-contactForm:hover::before {
        left: 100%;
    }

    .contact-info {
        background: #fff;
        padding: 30px;
        border-radius: 10px;
        box-shadow: 0 6px 10px rgba(0, 0, 0, 0.04);
        margin-bottom: 30px;
    }

    .contact-info__icon {
        color: #FF008C;
        margin-right: 15px;
        font-size: 20px;
        width: 20px;
        text-align: center;
    }

    .contact-info h3 {
        font-size: 18px;
        color: #001D38;
        margin-bottom: 5px;
        font-weight: 500;
    }

    .contact-info p {
        color: #727272;
        font-size: 15px;
        line-height: 28px;
        margin-bottom: 0;
    }
</style>

@section Scripts {
    <script>
        $(document).ready(function() {
            $('#contactForm').on('submit', function(e) {
                e.preventDefault();
                if (this.checkValidity()) {
                    // Show success message
                    Swal.fire({
                        icon: 'success',
                        title: 'Message Sent!',
                        text: 'We\'ll get back to you as soon as possible.',
                        confirmButtonColor: '#FF008C'
                    });
                    this.reset();
                } else {
                    e.stopPropagation();
                }
                $(this).addClass('was-validated');
            });
        });
    </script>
} 